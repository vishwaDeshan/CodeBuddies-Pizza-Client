@page "/customers"
@using CodeBuddies.PizzaAPI.Models
@inject HttpClient http

<h3>Customers</h3>

<a class="btn btn-primary float-end" href="/customer/add">Add Customer</a>

@if (sucessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @sucessMessage
    </div>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
else
{
    <table class="table table-striped">
        <thead>

            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customerData)
            {
                <tr>
                    <td>@customer.Email</td>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Address</td>
                    <td>@customer.Phone</td>
                    <td><a href="/customer/edit/@customer.Id" class="btn btn-outline-success">Edit</a></td>
                    <td><a class="btn btn-danger" @onclick="() => Delete(customer)">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}


