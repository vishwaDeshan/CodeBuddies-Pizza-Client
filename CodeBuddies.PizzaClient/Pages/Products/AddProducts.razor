@page "/addProduct"
@using CodeBuddies.PizzaAPI.Models

<h3>AddProduct</h3>


<div class="border border-1 p-5 ms-5 me-5 bg-light">
    <h3 class="m-2"> Add new product</h3>

    <form @onsubmit="AddProduct" class="ms-5 me-5">
        <div class="form-group row mb-2">
            <label for="productName" class="col-md-2 col-form-label">Name:</label>
            <input class="form-control" type="text" id="productName" @bind="product.Name" />
        </div>
        <div class="form-group row mb-3">
            <label for="productPrice" class="col-md-2 col-form-label">Price:</label>
            <input class="form-control" type="number" id="productPrice" @bind="product.Price" />
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <center><button type="submit" class="btn btn-primary">Add Product</button></center>
            </div>
        </div>

    </form>
</div>


